<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Configuration des headers HTTP pour Cross-Origin Isolation -->
        <httpProtocol>
            <customHeaders>
                <!-- Headers requis pour performance.measureUserAgentSpecificMemory() -->
                <add name="Cross-Origin-Embedder-Policy" value="require-corp" />
                <add name="Cross-Origin-Opener-Policy" value="same-origin" />
                
                <!-- Headers de sécurité additionnels (optionnels mais recommandés) -->
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                
                <!-- Cache control pour les ressources statiques -->
                <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
                <add name="Pragma" value="no-cache" />
                <add name="Expires" value="0" />
            </customHeaders>
        </httpProtocol>

        <!-- Configuration MIME types pour les fichiers JS/CSS -->
        <staticContent>
            <mimeMap fileExtension=".js" mimeType="application/javascript" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <mimeMap fileExtension=".css" mimeType="text/css" />
            <mimeMap fileExtension=".html" mimeType="text/html" />
        </staticContent>

        <!-- Configuration de compression (optionnel, améliore les performances) -->
        <urlCompression doDynamicCompression="true" doStaticCompression="true" />
        <httpCompression>
            <dynamicTypes>
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="application/json" enabled="true" />
            </dynamicTypes>
            <staticTypes>
                <add mimeType="application/javascript" enabled="true" />
                <add mimeType="text/css" enabled="true" />
                <add mimeType="text/html" enabled="true" />
            </staticTypes>
        </httpCompression>

        <!-- Configuration des erreurs par défaut -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>

        <!-- Règles de réécriture pour SPA (optionnel) -->
        <rewrite>
            <rules>
                <!-- Règle pour les fichiers statiques -->
                <rule name="StaticFiles" stopProcessing="true">
                    <match url="^(.*\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))$" />
                    <action type="None" />
                </rule>
                
                <!-- Règle pour les displays -->
                <rule name="DisplayRoutes" stopProcessing="true">
                    <match url="^display/.*" />
                    <action type="Rewrite" url="display/index.html" />
                </rule>
            </rules>
        </rewrite>

        <!-- Configuration de sécurité supplémentaire -->
        <security>
            <requestFiltering>
                <verbs>
                    <add verb="GET" allowed="true" />
                    <add verb="POST" allowed="true" />
                    <add verb="HEAD" allowed="true" />
                    <add verb="OPTIONS" allowed="true" />
                </verbs>
                <hiddenSegments>
                    <add segment="web.config" />
                </hiddenSegments>
            </requestFiltering>
        </security>
    </system.webServer>

    <!-- Configuration pour différents environnements -->
    <location path="." inheritInChildApplications="false">
        <system.webServer>
            <!-- Headers spécifiques à l'environnement de production -->
            <httpProtocol>
                <customHeaders>
                    <!-- En production, vous pourriez vouloir des CSP plus strictes -->
                    <!-- <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline';" /> -->
                </customHeaders>
            </httpProtocol>
        </system.webServer>
    </location>
</configuration>